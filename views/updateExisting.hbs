<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-wEmeIV1mKuiNpC+IOBjI7aAzPcEZeedi5yW5f2yOq55WWLwNGmvvx4Um1vskeMj0" crossorigin="anonymous">

    <title>Home-Away From Home</title>
</head>

<body>
    {{!-- Header --}}
    <header class="p-2 bg-dark text-white">
        <div class="container">
            <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
                <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none">
                    <img class="bi me-2" width="40" height="32" role="img" aria-label="Bootstrap"
                        src="./assets/logo.png">
                </a>

                <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
                    <li><a href="/" class="nav-link px-2 text-light">Home</a></li>
                    <li><a href="/about" class="nav-link px-2 text-white">About</a></li>
                </ul>
                <div class="text-end">
                    <!-- {{!-- <button type="button" class="btn btn-outline-light">Become a Host</button> --}} -->
                    <button type="button" class="btn btn-warning">Logout</button>
                </div>
            </div>
        </div>
    </header>

    <div class="sidebar-container">
        <div class="sidebar-logo">
            Home-Away from Home
        </div>
        <ul class="sidebar-navigation">
            <li class="header">Navigation</li>
            <li>
                <a href="hostDashboard">
                    <i class="fa fa-home" aria-hidden="true"></i> Dashoard
                </a>
            </li>
            <li>
                <a href="/addNew">
                    <i class="fa fa-users" aria-hidden="true"></i> Add New
                </a>
            </li>
            <li>
                <a href="/updateExisting">
                    <i class="fa fa-cog" aria-hidden="true"></i> Update Existing
                </a>
            </li>
            <li>
                <a href="/contactUs">
                    <i class="fa fa-info-circle" aria-hidden="true"></i> Contact Us
                </a>
            </li>
        </ul>
    </div>

    <div class="content-container">

        <div class="container-fluid">

            <!-- Main component for a primary marketing message or call to action -->
            <div class="jumbotron">
                <h1 class="text-center display-5">Welcome, {{name}}</h1>
                {{!-- Write Your Logic --}}
                <div class="container mt-5 text-center">
                    {{#each listings}}
                    <div class="wrapper">
                        <h1>{{this.location}}</h1>
                        <div class="image i1">
                            <div id="carouselExampleSlidesOnly" class="carousel slide" data-bs-ride="carousel">
                                <div class="carousel-inner">
                                    <div class="carousel-item active">
                                        <img src="{{this.imageRoom}}" class="d-block w-100" alt="..." height="250"
                                            width="230">
                                    </div>
                                    <div class="carousel-item">
                                        <img src="{{this.imageWashroom}}" class="d-block w-100" alt="..." height="250"
                                            width="230">
                                    </div>
                                    <div class="carousel-item">
                                        <img src="{{this.imageOut}}" class="d-block w-100" alt="..." height="250"
                                            width="230">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="details">
                            <h1><em>{{this.housename}}</em></h1>
                            <p>{{this.amenities}}</p>
                        </div>
                        <h1>₹{{this.price}}</h1>
                        <a href="/updateListing?_id={{this._id}}"><button class="btn btn-primary">Update</button></a>
                        <a href="/deleteListing?_id={{this._id}}"><button class="btn btn-danger">Delete</button></a>
                    </div>
                </div>
                {{/each}}
            </div>

        </div>
    </div>
    {{!-- Footer --}}
